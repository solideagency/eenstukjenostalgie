	<script>
	if('querySelector' in document && 'querySelectorAll' in document && 'addEventListener' in window) {
		var prev = document.querySelector('.prev');
		var next = document.querySelector('.next');
		var sections = document.querySelectorAll("aside form div");
		var buttons = document.querySelectorAll(".slider");
		var slideIndex = 1;

		buttons.forEach(function(button){
			button.style.display = "inline-block";
		})

		//create dot navigation
		for(var i = 0; i < sections.length; i++) {
			var nav = document.querySelector('nav');
			var dot = document.createElement('button');
			nav.appendChild(dot);
		}
		var dots = document.querySelectorAll('nav button');
		dots[0].classList.add("activeSlider")

		//prev next buttons function
		function showDivs(n) {
			var i;
			if (n > sections.length){
				slideIndex = 1
			}
			if (n < 1) {
				slideIndex = sections.length
			}
			for (i = 0; i < sections.length; i++) {
				 sections[i].style.display = "none";
			}
			sections[slideIndex-1].childNodes[1].childNodes[3].checked = true
			sections[slideIndex-1].style.display = "inline-block";
		}

		showDivs(slideIndex);

		function plusDivs(n) {
			showDivs(slideIndex += n);
			for (i = 0; i < dots.length; i++) {
				dots[i].classList.remove("activeSlider");
			}
			dots[slideIndex-1].classList.add("activeSlider");

		}

		prev.addEventListener('click', function(e){
			e.preventDefault();
			plusDivs(-1)
		});

		next.addEventListener('click', function(e){
			e.preventDefault();
			plusDivs(1)
		});

		//dot navigation
		function specificDivs(n) {
			showDivs(slideIndex = n);
			for (i = 0; i < dots.length; i++) {
				dots[i].classList.remove("activeSlider");
			}
			dots[slideIndex-1].classList.add("activeSlider");
		}

		dots.forEach(function(el, index){
			el.addEventListener('click', function(e){
				e.preventDefault();
				specificDivs(index + 1)
			})
		})
	}
	</script>
